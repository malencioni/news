<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Fonts -->
    <!-- Swap out "Roboto" for the font(s) you want to use -->
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css" crossorigin="anonymous">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    
    <!-- Your own CSS -->
    <link rel="stylesheet" href="/styles.css">

    <title>News</title>
  </head>
  <body>

    <div class="container container_width">
      <h1>Weather & News</h1>
    </div>
<div class="container container_width">
    <div class="jumbotron weather_jumbo">
    <div class="row">
        <div class="col-lg d-flex justify-content-center align-items-stretch">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h1>Today</h1>
                    <h5>Temp: <%=@today_temp%> degrees</h5>
                    <p>Today there will be <%=@today_weather%></p>
                </div>
            </div>
        </div>
        <div class="col-lg d-flex justify-content-center align-items-stretch">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h1>Day <%=@weather_number + 2%></h1>
                    <h5>High: <%=@daily_temp[@weather_number]%> Low: <%=@daily_min[0]%></h5>
                    <p>Tomorrow there will be <%=@daily_weather[@weather_number]%></p>
                    <% @weather_number = @weather_number + 1 %>
                </div>
            </div>
        </div>
        <div class="col-lg d-flex justify-content-center align-items-stretch">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h1>Day <%=@weather_number + 2%></h1>
                    <h5>High: <%=@daily_temp[@weather_number]%> Low: <%=@daily_min[0]%></h5>
                    <p>Tomorrow there will be <%=@daily_weather[@weather_number]%></p>
                    <% @weather_number = @weather_number + 1 %>
                </div>
            </div>
        </div>
        <div class="col-lg d-flex justify-content-center align-items-stretch">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h1>Day <%=@weather_number + 2%></h1>
                    <h5>High: <%=@daily_temp[@weather_number]%> Low: <%=@daily_min[0]%></h5>
                    <p>Tomorrow there will be <%=@daily_weather[@weather_number]%></p>
                    <% @weather_number = @weather_number + 1 %>
                </div>
            </div>
        </div>
        <div class="col-lg d-flex justify-content-center align-items-stretch">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h1>Day <%=@weather_number + 2%></h1>
                    <h5>High: <%=@daily_temp[@weather_number]%> Low: <%=@daily_min[0]%></h5>
                    <p>Tomorrow there will be <%=@daily_weather[@weather_number]%></p>
                    <% @weather_number = @weather_number + 1 %>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<!--End Weather-->

<div class = "row">
    <div class="col-lg">
        <div class="container container_width">
            <div class="jumbotron news_jumbo">
                <h2><%=@headline[@news_number]%></h2>
                <h4><%=@tagline[@news_number]%></h4>
                <a class="btn btn-primary news_link" target="_blank" href="<%=@newslink[@news_number]%>" role="button">Read More</a>
                <% @news_number = @news_number + 1 %>
            </div>
        </div>
    </div>
</div>
<div class = "row">
    <div class="col-lg">
        <div class="container container_width">
            <div class="jumbotron news_jumbo">
                <h2><%=@headline[@news_number]%></h2>
                <h4><%=@tagline[@news_number]%></h4>
                <a class="btn btn-primary news_link" target="_blank" href="<%=@newslink[@news_number]%>" role="button">Read More</a>
                <% @news_number = @news_number + 1 %>
            </div>
        </div>
    </div>
</div>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
